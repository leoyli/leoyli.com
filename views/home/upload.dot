{{= _fn.loadPartial('_header') }}

<h1 class="container mb-4">Media Uploader</h1>

<div class="container">
    <form class="col-lg-9" action="/home/upload" method="POST" enctype="multipart/form-data">
        <div class="h3">First Media</div>
        <div class="form-row">
            <div class="form-group col-5">
                <label class="font-weight-bold col-12" for="username">File</label>
                <input class="form-control" name="media_1[file]" type="file" />
            </div>
            <div class="form-group col-7 d-flex flex-wrap align-content-stretch">
                <label class="font-weight-bold" for="username">Title</label>
                <input class="form-control" name="media_1[title]" placeholder="Title" />
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-12">
                <label class="font-weight-bold" for="username">Description</label>
                <input class="form-control" name="media_1[description]" placeholder="Description" />
            </div>
        </div>
        <hr class="pb-4"/>

        <div class="h3">Second Media</div>
        <div class="form-row">
            <div class="form-group col-5">
                <label class="font-weight-bold" for="username">File</label>
                <input class="form-control" name="media_2[file]" type="file" />
            </div>
            <div class="form-group col-7 d-flex flex-wrap align-content-stretch">
                <label class="font-weight-bold" for="username">Title</label>
                <input class="form-control" name="media_2[title]" placeholder="Title" />
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-12">
                <label class="font-weight-bold" for="username">Description</label>
                <input class="form-control" name="media_2[description]" placeholder="Description" />
            </div>
        </div>
        <hr class="pb-4"/>

        <div class="text-right">
            <button class="btn btn-outline-primary text-uppercase">Upload</button>
        </div>
    </form>
</div>

{{= _fn.loadPartial('_footer') }}
