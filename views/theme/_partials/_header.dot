<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <title>{{= $$VIEW.title }}</title>

    <!-- meta tags -->
    {{= _widget.meta }}

    <!-- SEO -->
    {{? typeof post !== 'undefined' && !Array.isArray(post) }}
        <link rel="canonical" href="/posts/{{= post.canonical !== undefined ? post.canonical : '' }}"/>
    {{?}}
    {{? $$VIEW.prev }}<link rel="prev" href="{{= $$VIEW.prev }}">{{?}}
    {{? $$VIEW.next }}<link rel="next" href="{{= $$VIEW.next }}">{{?}}

    <!-- CDN stylesheets -->
    {{= _widget.CDN }}

    <!-- Local stylesheets -->
    <!--<link rel="stylesheet" href="/lib/highlightJS/styles/androidstudio.css" />-->
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <!-- Facebook OG / Twitter Cards -->
</head>


<body class="bg-black">
<header role="banner">
    {{= _fn.loadPartial('_navibar') }}
</header>


<main class="bg-white pb-5 pt-4" role="main">
    <!-- flash message -->
    {{? $$VIEW.flash && ($$VIEW.flash.error || $$VIEW.flash.info) }}
        <div class="container pb-2" id="flashMessage">
            {{? $$VIEW.flash.error.length > 0 }}
                <div class="alert alert-danger" role="alert">{{= $$VIEW.flash.error }}</div>
            {{?}}
            {{? $$VIEW.flash.info.length > 0 }}
                <div class="alert alert-success" role="alert">{{= $$VIEW.flash.info }}</div>
            {{?}}
        </div>
    {{?}}
