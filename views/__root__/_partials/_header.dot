<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <title>{{= _view.title }}</title>

    <!-- meta tags -->
    {{= _widget.meta }}

    <!-- internal reference -->
    {{? _view.prev }}<link rel="prev" href="{{= _view.prev }}">{{?}}
    {{? _view.next }}<link rel="next" href="{{= _view.next }}">{{?}}

    <!-- CDN stylesheets -->
    {{= _widget.CDN }}


    <!-- Local stylesheets -->
    <!--<link rel="stylesheet" href="/lib/highlightJS/styles/androidstudio.css" />-->
    <link rel="stylesheet" href="/stylesheets/style.css" />
</head>


<body class="bg-black">
<header role="banner">
    {{= _fn.loadPartial('_navibar') }}
</header>


<main class="bg-white pb-5 pt-4" role="main">
    <!-- flash message -->
    {{? _view.flash && (_view.flash.error || _view.flash.info) }}
        <div class="container pb-2" id="flashMessage">
            {{? _view.flash.error.length > 0 }}
                <div class="alert alert-danger" role="alert">{{= _view.flash.error }}</div>
            {{?}}
            {{? _view.flash.info.length > 0 }}
                <div class="alert alert-success" role="alert">{{= _view.flash.info }}</div>
            {{?}}
        </div>
    {{?}}
