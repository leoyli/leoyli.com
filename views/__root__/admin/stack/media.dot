{{= _fn.loadPartial('_header') }}

<h1 class="container mb-4">Media Stack</h1>

<form class="container" method="POST">
    <div class="container d-flex px-0 pb-2">
        <select class="custom-select custom-select-sm col-2 mr-2">
            <option selected>Select a bulk action</option>
            <option value="recycled">Recycle</option>
        </select>
        <button class="btn btn-sm btn-outline-secondary" aria-label="Apply"
                formaction="/admin/stack/docs?_method=PATCH" >Apply</button>
    </div>
    <table class="table table-sm table-hover">
        <thead>
        <tr>
            <th class="text-center" scope="col" width="3%">
                <label for="select-all" class="m-0"><input id="select-all" type="checkbox"></label>
            </th>
            <th scope="col" width="25%">Title</th>
            <th scope="col" width="44%">Description</th>
            <th scope="col" width="14%">Author</th>
            <th scope="col" width="14%">Time</th>
        </tr>
        </thead>
        <tbody>
        {{? $$LIST.length > 0 }}
        {{ $$LIST.forEach(function(doc) { }}
        <tr>
            <th class="text-center" scope="row">
                <input id="{{= doc._id }}" name="target" type="checkbox" value="{{= doc._id }}">
                <label for="{{= doc._id }}"></label>
            </th>
            <td>{{= doc.title }}</td>
            <td>{{= doc.description }}</td>
            <td>{{= doc.author.nickname }}</td>
            <td>{{= new Date(doc.time.uploaded).toDateString() }}</td>
        </tr>
        {{ }); }}{{?}}
        </tbody>
    </table>
</form>

{{= _widget.pagination }}
{{= _fn.loadPartial('_footer') }}
