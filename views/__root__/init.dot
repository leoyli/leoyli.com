{{= _fn.loadPartial('_header') }}

<h1 class="container mb-4">App Initialization</h1>

<div class="container">
    <form class="col-lg-9" action="/init" method="POST">
        <div class="form-group">
            <label class="font-weight-bold" for="email">Email</label>
            <input class="form-control" id="email" name="email" placeholder="Email" type="email" />
        </div>
        <div class="form-group">
            <label class="font-weight-bold" for="nickname">Nickname</label>
            <input class="form-control" id="nickname" name="nickname" placeholder="nickname" type="text" />
        </div>
        <div class="form-group">
            <label class="font-weight-bold" for="password">Password</label>
            <input class="form-control" id="password" name="password[new]" placeholder="Password" type="password" />
        </div>
        <div class="form-group">
            <label class="font-weight-bold" for="password">Password (again)</label>
            <input class="form-control" id="password" name="password[confirmed]" placeholder="Password" type="password" />
        </div>
        <div class="text-right">
            <button class="btn btn-outline-primary">SUBMIT</button>
        </div>
    </form>
</div>
