{{= _fn.loadPartial('_header') }}

<h1 class="container mb-4">SIGN IN</h1>

<div class="container">
    <form class="col-lg-9" action="/signin?_method=PATCH" method="POST">
        <div class="form-group">
            <label class="font-weight-bold" for="username">Email / Username</label>
            <input class="form-control" id="email" name="email" placeholder="Email / Username" />
        </div>
        <div class="form-group">
            <label class="font-weight-bold" for="password">Password</label>
            <input class="form-control" id="password" name="password" placeholder="Password" type="password" />
        </div>
        <div class="form-check">
            <label class="form-check-label">
                <input class="form-check-input" id="persistence" name="isPersisted" value="true" type="checkbox"
                       checked />Stay sign-in for 14 days.
            </label>
        </div>
        <div class="text-right">
            <button class="btn btn-outline-primary">SUBMIT</button>
        </div>
    </form>
</div>

{{= _fn.loadPartial('_footer') }}
