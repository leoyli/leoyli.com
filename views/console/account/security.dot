{{# def.partial('_header') }}

<h1 class="mb-4">Change Password</h1>

<form action="/console/security/?_method=PATCH" method="POST">
    <div class="form-group">
        <label class="font-weight-bold" for="username">Old password</label>
        <input class="form-control" name="password[old]" type="password" />
    </div>
    <div class="form-group">
        <label class="font-weight-bold" for="password">New password</label>
        <input class="form-control" name="password[new]" type="password" />
    </div>
    <div class="form-group">
        <label class="font-weight-bold" for="password">New password (again)</label>
        <input class="form-control" name="password[confirmed]" type="password" />
    </div>
    <div class="text-right">
        <button class="btn btn-outline-primary text-uppercase">Submit</button>
    </div>
</form>

{{# def.partial('_footer') }}
