{{# def.partial('_header') }}

<h1 class="mb-4">POST</h1>

{{ posts.forEach(function(post) { }}
    <div class="mb-4 pb-4" id="{{= post._id }}">
        <div class="_title h2"><a href="/post/{{= post._id }}">{{= post.title }}</a></div>
        <div class="d-flex row">
            <div class="col-md-9">
                {{= post.provider.username }}
                ｜<a href="/post/editor/{{= post._id }}" target="_self">(edit)</a>
                ｜<a href="/post/class/{{= post.class }}" target="_self">{{= post.class }}</a>
                ｜Revised: {{= post._revised }}
            </div>
            <div class="col-md-3 text-lg-right">
                <i>{{= post._updated.toDateString() }}</i>
            </div>
        </div>
        <div class="_featured pb-2 pt-2">
            <a href="/post/{{= post._id }}"><img src="{{= post.featured }}" class="img-fluid"></a>
        </div>
    </div>
{{ }); }}

{{# def.partial('_footer') }}
