{{# def.partial('_header') }}

<h1>POST</h1>
<div>&nbsp;</div>

{{ posts.forEach(function(post) { }}
    <div class="_postDisplay" id="{{= post._id }}">
        <div class="_title"><h3><a href="/post/{{= post._id }}">{{= post.title }}</a></h3></div>
        <div class="row">
            <div class="_author col-md-8">- {{= post.provider.username }}</div>
            <div class="_date col-md-4"><i>{{= post._updated.toDateString() }}</i></div>
        </div>
        <div class="_ftimg"><a href="/post/{{= post._id }}"><img src="{{= post.featured }}" style="width:800px"></a></div>
    </div>
    <div style="height: 60px">&nbsp;</div>
{{ }); }}

{{# def.partial('_footer') }}
