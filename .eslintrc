{
  "extends": "airbnb",
  "env": {
    "es6": true,
    "node": true,
    "mongo": true,
    "jest": true
  },
  "rules": {
    // emabled
    "arrow-body-style": 0,
    "arrow-parens": 0,
    "camelcase": 0,
    "consistent-return": 0,
    "constructor-super": 0,
    "max-len": 0,
    "no-multi-spaces": 0,
    "no-nested-ternary": 0,
    "no-useless-escape": 0,
    "no-underscore-dangle": 0,
    "object-curly-newline": 0,
    "spaced-comment": 0,

    // warning
    "global-require": 1,
    "no-unused-vars": 1,
    "no-use-before-define": 1,
    "no-param-reassign": 1,
    "no-plusplus": 1
  }
}
