{
  "extends": "airbnb",
  "env": {
    "es6": true,
    "node": true,
    "mongo": true,
    "jest": true,
    "browser": true
  },
  "parser": "babel-eslint",
  "plugins": ["babel"],
  "parserOptions": {
    "ecmaVersion": 2018,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    // configs
    "import/extensions": [".js", ".jsx"],
    "jsx-a11y/anchor-is-valid": [ "error", {
      "components": [ "Link" ],
      "specialLink": [ "to" ]
    }],

    // disabled
    "arrow-body-style": 0,
    "arrow-parens": 0,
    "consistent-return": 0,
    "constructor-super": 0,
    "max-len": 0,
    "no-multi-spaces": 0,
    "no-nested-ternary": 0,
    "no-useless-escape": 0,
    "no-underscore-dangle": 0,
    "object-curly-newline": 0,
    "spaced-comment": 0,
    "strict": 0,
    "react/sort-comp": 0,
    "react/prop-types": 0,
    "react/no-did-mount-set-state": 0,
    "react/no-did-update-set-state": 0,

    // warning
    "camelcase": 1,
    "global-require": 1,
    "no-multi-assign": 1,
    "no-unused-vars": 1,
    "no-use-before-define": 1,
    "no-param-reassign": 1,
    "prefer-destructuring": 1,
    "import/no-dynamic-require": 1
  }
}
